{
  "name": "@cks/backend",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "cross-env NODE_ENV=development TS_NODE_TRANSPILE_ONLY=1 tsx -r dotenv/config server/index.ts",
    "build": "tsc",
    "test": "echo 'Tests disabled for backend'",
    "migrate": "node scripts/migrate.js",
    "backfill:catalog-activities": "tsx -r dotenv/config scripts/backfill-catalog-activities.ts",
    "normalize:created-activities": "tsx -r dotenv/config scripts/normalize-created-activities.ts",
    "backfill:assignments-and-certs": "tsx -r dotenv/config scripts/backfill-assignments-and-certifications.ts",
    "backfill:all-activities": "pnpm -s backfill:catalog-activities && pnpm -s normalize:created-activities && pnpm -s backfill:assignments-and-certs",
    "migrate:activity-descriptions": "tsx -r dotenv/config scripts/migrate-activity-descriptions.ts",
    "normalize:cert-targets": "tsx -r dotenv/config scripts/normalize-cert-activity-targets.ts"
  },
  "devDependencies": {
    "@types/pg": "^8.15.5",
    "cross-env": "^7.0.3",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@clerk/backend": "^1.9.1",
    "@cks/policies": "workspace:*",
    "@fastify/cookie": "^9.0.0",
    "@fastify/cors": "^9.0.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/rate-limit": "9.1.0",
    "dotenv": "^17.2.2",
    "fastify": "^4.26.2",
    "pg": "^8.16.3",
    "zod": "^4.1.11"
  }
}
