{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "node",
    "types": [
      "vite/client"
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@cks-frontend/*": [
        "../frontend/src/*"
      ],
      "@cks-packages/*": [
        "../../packages/*"
      ],
      "@cks/auth": [
        "../../auth/src/index.ts"
      ],
      "@clerk/clerk-react": [
        "./src/mocks/clerk-react"
      ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
