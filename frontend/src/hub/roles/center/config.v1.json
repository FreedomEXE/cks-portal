{
  "_tag": "Property of CKS © 2025 — Manifested by Freedom",
  "role": "center",
  "displayName": "Center Hub",
  "version": "1.0.0",
  "theme": {
    "primaryColor": "#059669",
    "headerClass": "bg-emerald-600",
    "accentColor": "#047857"
  },
  "tabs": [
    {
      "id": "dashboard",
      "label": "Dashboard",
      "component": "Dashboard",
      "icon": "LayoutDashboard",
      "default": true,
      "requires": ["dashboard:view"]
    },
    {
      "id": "profile",
      "label": "My Profile", 
      "component": "MyProfile",
      "icon": "User",
      "requires": ["profile:view"]
    },
    {
      "id": "ecosystem",
      "label": "My Ecosystem",
      "component": "Ecosystem",
      "icon": "Network",
      "requires": ["ecosystem:view"]
    },
    {
      "id": "services",
      "label": "My Services",
      "component": "MyServices", 
      "icon": "Settings",
      "requires": ["services:manage"]
    },
    {
      "id": "orders",
      "label": "Orders",
      "component": "Orders",
      "icon": "ShoppingCart", 
      "requires": ["orders:view"]
    },
    {
      "id": "reports",
      "label": "Reports",
      "component": "Reports",
      "icon": "FileText",
      "requires": ["reports:view"]
    },
    {
      "id": "support",
      "label": "Support",
      "component": "Support", 
      "icon": "HelpCircle",
      "requires": ["support:access"]
    }
  ],
  "features": {
    "showFacilityMetrics": true,
    "showMaintenanceAlerts": true,
    "allowVisitorTracking": true,
    "facilityOperations": true,
    "viewHierarchy": ["crew", "contractor"]
  },
  "api": {
    "baseUrl": "/api/center",
    "endpoints": {
      "profile": "/profile",
      "dashboard": "/dashboard", 
      "services": "/services",
      "ecosystem": "/ecosystem",
      "facility": "/facility",
      "maintenance": "/maintenance",
      "visitors": "/visitors"
    }
  },
  "permissions": {
    "default": ["dashboard:view", "profile:view"],
    "required": {
      "services:manage": "Manage center services",
      "ecosystem:view": "View center ecosystem", 
      "facility:manage": "Manage facility operations",
      "maintenance:view": "View maintenance status",
      "visitors:track": "Track visitor access"
    }
  }
}