{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@shared/*": ["src/shared/*"],
      "@roles/*": ["src/roles/*"],
      "@test/*": ["src/test-interface/*"],
      "@cks-auth/*": ["../auth/src/*"],
      "@cks-ui/*": ["../packages/ui/src/*"],
      "@cks-domain/*": ["../packages/domain-widgets/src/*"],
      "@clerk/clerk-react": ["../Test-Interface/src/mocks/clerk-react.tsx"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
