{
  "name": "@cks/portal",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "node scripts/run-dev.js",
    "dev:parallel": "pnpm -r --parallel dev",
    "dev:packages": "pnpm --filter @cks/ui dev & pnpm --filter @cks/domain-widgets dev & pnpm --filter @cks/auth dev",
    "dev:full": "pnpm dev:packages & pnpm --filter ./apps/frontend dev",
    "rebuild:ui": "pnpm --filter @cks/ui build && pnpm --filter @cks/domain-widgets build",
    "dev:ui": "pnpm --filter @cks/ui dev & pnpm --filter @cks/domain-widgets dev",
    "changeset": "changeset",
    "build": "pnpm -r build",
    "test": "pnpm run -r test",
    "test:ci": "pnpm run -r test:ci",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:perf": "playwright test tests/e2e/crew/performance.spec.ts tests/e2e/manager/performance.spec.ts tests/e2e/warehouse/performance.spec.ts",
    "test:e2e:report": "playwright show-report",
    "codegen": "node scripts/prebuild-codegen.mjs",
    "typecheck": "pnpm -r --if-present typecheck",
    "lint": "pnpm -r --if-present lint",
    "prebuild": "pnpm run codegen",
    "prepare": "husky",
    "dev:backend": "pnpm --filter ./apps/backend dev",
    "dev:frontend": "pnpm --filter ./apps/frontend dev",
    "dev:gateway": "pnpm --filter ./apps/gateway dev"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/node": "^20.0.0",
    "husky": "9",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "packageManager": "pnpm@10.19.0+sha512.c9fc7236e92adf5c8af42fd5bf1612df99c2ceb62f27047032f4720b33f8eacdde311865e91c411f2774f618d82f320808ecb51718bfa82c060c4ba7c76a32b8"
}
