{
  "_tag": "Property of CKS © 2025 — Manifested by Freedom",
  "role": "crew",
  "displayName": "Crew Hub",
  "version": "1.0.0",
  "theme": {
    "primaryColor": "#10b981",
    "headerClass": "bg-emerald-500",
    "accentColor": "#059669"
  },
  "tabs": [
    {
      "id": "dashboard",
      "label": "Dashboard",
      "component": "Dashboard",
      "icon": "LayoutDashboard",
      "default": true,
      "requires": ["dashboard:view"]
    },
    {
      "id": "profile",
      "label": "My Profile", 
      "component": "MyProfile",
      "icon": "User",
      "requires": ["profile:view"]
    },
    {
      "id": "services",
      "label": "My Services",
      "component": "MyServices", 
      "icon": "Settings",
      "requires": ["services:view"]
    },
    {
      "id": "ecosystem",
      "label": "Ecosystem",
      "component": "Ecosystem",
      "icon": "Network",
      "requires": ["ecosystem:view"]
    },
    {
      "id": "orders",
      "label": "Orders",
      "component": "Orders",
      "icon": "ShoppingCart",
      "requires": ["orders:view"]
    },
    {
      "id": "reports",
      "label": "Reports",
      "component": "Reports",
      "icon": "BarChart3",
      "requires": ["reports:view"]
    },
    {
      "id": "support",
      "label": "Support",
      "component": "Support",
      "icon": "HelpCircle",
      "requires": ["support:access"]
    }
  ],
  "features": {
    "showTaskMetrics": true,
    "showScheduleView": true,
    "allowTaskUpdates": true,
    "equipmentTracking": true,
    "viewHierarchy": ["center"]
  },
  "api": {
    "baseUrl": "/api/crew",
    "endpoints": {
      "profile": "/profile",
      "dashboard": "/dashboard", 
      "services": "/services",
      "ecosystem": "/ecosystem",
      "orders": "/orders",
      "reports": "/reports", 
      "support": "/support",
      "tasks": "/tasks",
      "schedule": "/schedule",
      "equipment": "/equipment"
    }
  },
  "permissions": {
    "default": ["dashboard:view", "profile:view"],
    "required": {
      "services:view": "View assigned services",
      "ecosystem:view": "View crew ecosystem",
      "orders:view": "View work orders",
      "reports:view": "View reports and analytics",
      "support:access": "Access support resources",
      "tasks:manage": "Manage assigned tasks",
      "schedule:view": "View work schedule",
      "equipment:use": "Access equipment resources"
    }
  }
}